<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/row_margin"
    android:paddingRight="@dimen/row_margin"
    android:background="@color/background_material_dark"
    android:id="@+id/collection_widget_list_item"
    >

    <TextView
        android:id="@+id/collection_widget_stock_symbol"
        style="@style/StockSymbolTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left|start|center_vertical"
        tools:text="GOOG"
        />

    <TextView
        android:id="@+id/collection_widget_bid_price"
        style="@style/BidPriceTextStyle"
        android:gravity="right|end"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingRight="@dimen/row_text_right_margin"
        android:paddingEnd="@dimen/row_text_right_margin"
        tools:text="1000.00"
        />

</LinearLayout>